{
  "name": "pinia-scope",
  "type": "module",
  "version": "1.0.9",
  "packageManager": "pnpm@10.9.0",
  "description": "Scoped Pinia Stores for Vue",
  "author": {
    "name": "Carl Olsen",
    "email": "unstoppablecarlolsen@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "vue",
    "pinia"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist/*.js",
    "dist/*.mjs",
    "dist/*.cjs",
    "types",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "vitest --coverage"
  },
  "peerDependencies": {
    "pinia": ">=2.2.2",
    "vue": "^3.2.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@pinia/testing": "^1.0.2",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^24.0.10",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/devtools-api": "^7.7.7",
    "@vue/test-utils": "^2.4.6",
    "esbuild": "^0.23.0",
    "happy-dom": "^18.0.1",
    "pascalcase": "^2.0.0",
    "pinia": "^3.0.3",
    "rollup": "^4.20.0",
    "rollup-plugin-circular-dependencies": "^1.1.2",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.17"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unstoppablecarl/pinia-scope.git"
  },
  "bugs": {
    "url": "https://github.com/vuejs/pinia/issues"
  }
}
